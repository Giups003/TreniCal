<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unical.trenical.client.gui.controller.DashboardController"
            prefWidth="700" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #e0e7ef, #b3c6e7);">
    <top>
        <Label text="Benvenuto su TreniCal!"
               style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-padding: 25px; -fx-text-fill: #234a7c;"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="28">
            <Label fx:id="adminLabel" text="ModalitÃ  amministratore attiva"
                   style="-fx-font-size: 16px; -fx-text-fill: #d0021b; -fx-font-weight: bold;" visible="false"
                   managed="false"/>
            <Button text="Ricerca treni" fx:id="searchTrainsButton" onAction="#onSearchTrains"
                    style="-fx-font-size: 18px; -fx-background-radius: 20; -fx-background-color: #4a90e2; -fx-text-fill: white; -fx-padding: 12 40;"/>
            <Button text="Acquista biglietto" fx:id="buyTicketButton" onAction="#onBuyTicket"
                    style="-fx-font-size: 18px; -fx-background-radius: 20; -fx-background-color: #50e3c2; -fx-text-fill: #234a7c; -fx-padding: 12 40;"/>
            <Button text="I miei biglietti" fx:id="myTicketsButton" onAction="#onMyTickets"
                    style="-fx-font-size: 18px; -fx-background-radius: 20; -fx-background-color: #f5a623; -fx-text-fill: #234a7c; -fx-padding: 12 40;"/>
            <Button text="Gestione promozioni" fx:id="adminPromotionsButton" onAction="#onAdminPromotions"
                    style="-fx-font-size: 16px; -fx-background-radius: 20; -fx-background-color: #234a7c; -fx-text-fill: white; -fx-padding: 10 36;"/>
            <Button text="Logout" fx:id="logoutButton" onAction="#onLogout"
                    style="-fx-font-size: 16px; -fx-background-radius: 20; -fx-background-color: #d0021b; -fx-text-fill: white; -fx-padding: 10 36;"/>
        </VBox>
    </center>
</BorderPane>

