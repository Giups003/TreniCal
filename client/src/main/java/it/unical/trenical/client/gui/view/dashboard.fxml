<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unical.trenical.client.gui.controller.DashboardController"
            minWidth="700" minHeight="500" prefWidth="700" prefHeight="500" maxWidth="1000" maxHeight="700"
            style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #c3cfe2);">
    <top>
        <Label text="Benvenuto su TreniCal!"
               style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-padding: 25px; -fx-text-fill: #22304a;"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="28" minWidth="400" minHeight="400">
            <Label fx:id="adminLabel" text="Modalità amministratore attiva"
                   style="-fx-font-size: 16px; -fx-text-fill: #b00020; -fx-font-weight: bold;" visible="false"
                   managed="false"/>
            <Button text="Ricerca treni" fx:id="searchTrainsButton" onAction="#onSearchTrains"
                    style="-fx-font-size: 18px; -fx-background-radius: 20; -fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 12 40;"/>
            <Button text="Acquista biglietto" fx:id="buyTicketButton" onAction="#onBuyTicket"
                    style="-fx-font-size: 18px; -fx-background-radius: 20; -fx-background-color: #43a047; -fx-text-fill: white; -fx-padding: 12 40;"/>
            <Button text="I miei biglietti" fx:id="myTicketsButton" onAction="#onMyTickets"
                    style="-fx-font-size: 18px; -fx-background-radius: 20; -fx-background-color: #ffa000; -fx-text-fill: #22304a; -fx-padding: 12 40;"/>
            <Button text="Notifiche" fx:id="notificationsButton" onAction="#onNotifications"
                    style="-fx-font-size: 18px; -fx-background-radius: 20; -fx-background-color: #9c27b0; -fx-text-fill: white; -fx-padding: 12 40;"/>
            <Button text="Gestione promozioni" fx:id="adminPromotionsButton" onAction="#onAdminPromotions"
                    style="-fx-font-size: 16px; -fx-background-radius: 20; -fx-background-color: #234a7c; -fx-text-fill: white; -fx-padding: 10 36;"/>
            <Button text="Logout" fx:id="logoutButton" onAction="#onLogout"
                    style="-fx-font-size: 16px; -fx-background-radius: 20; -fx-background-color: #d0021b; -fx-text-fill: white; -fx-padding: 10 36;"/>
            <Label fx:id="loyaltyLabel" text="Non sei ancora membro FedeltàTreno"
                   style="-fx-font-size: 15px; -fx-text-fill: #1976d2;" visible="true" managed="true"/>
            <CheckBox fx:id="promotionsCheckBox" text="Ricevi promozioni FedeltàTreno" visible="false" disable="true"/>
            <Button text="Iscriviti a FedeltàTreno" fx:id="joinLoyaltyButton" onAction="#onJoinLoyalty"
                    style="-fx-font-size: 15px; -fx-background-radius: 20; -fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 8 30;"/>
            <Label fx:id="emailLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #234a7c;" visible="false"
                   managed="false"/>
            <Button text="Login" fx:id="loginButton" onAction="#onLogin"
                    style="-fx-font-size: 16px; -fx-background-radius: 20; -fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 10 36;"/>
            <Button text="Pannello Admin" fx:id="adminPanelButton" onAction="#onAdminPanel"
                    style="-fx-font-size: 16px; -fx-background-radius: 20; -fx-background-color: #234a7c; -fx-text-fill: white; -fx-padding: 10 36;"
                    visible="false" managed="false"/>
            <Region minHeight="0" VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>
</BorderPane>
