<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.unical.trenical.client.gui.controller.SearchTrainsController"
      minWidth="600" minHeight="500" prefWidth="1000" prefHeight="700" maxWidth="2560" maxHeight="1440"
      style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #c3cfe2);" spacing="0">

    <!-- Header -->
    <Label text="Ricerca treni" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #22304a; -fx-padding: 18px;"/>

    <!-- Search Form - Fixed height section -->
    <VBox spacing="20" style="-fx-padding: 20 40 20 40;" minHeight="280" maxHeight="280" prefHeight="280">
        <!-- First row: Departure and Arrival -->
        <HBox spacing="20" alignment="CENTER">
            <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" maxWidth="450" minWidth="250">
                <Label text="Stazione partenza:" style="-fx-font-size: 14px; -fx-text-fill: #234a7c; -fx-font-weight: bold;"/>
                <TextField fx:id="departureField" maxWidth="Infinity" promptText="Inserisci stazione di partenza"
                          style="-fx-background-radius: 12; -fx-background-color: #fff; -fx-border-color: #c3cfe2; -fx-border-radius: 12; -fx-padding: 8;"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" maxWidth="450" minWidth="250">
                <Label text="Stazione arrivo:" style="-fx-font-size: 14px; -fx-text-fill: #234a7c; -fx-font-weight: bold;"/>
                <TextField fx:id="arrivalField" maxWidth="Infinity" promptText="Inserisci stazione di arrivo"
                          style="-fx-background-radius: 12; -fx-background-color: #fff; -fx-border-color: #c3cfe2; -fx-border-radius: 12; -fx-padding: 8;"/>
            </VBox>
        </HBox>

        <!-- Second row: Date and Preferences -->
        <HBox spacing="15" alignment="CENTER">
            <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" maxWidth="200" minWidth="150">
                <Label text="Data:" style="-fx-font-size: 14px; -fx-text-fill: #234a7c; -fx-font-weight: bold;"/>
                <DatePicker fx:id="datePicker" maxWidth="Infinity"
                           style="-fx-background-radius: 12; -fx-background-color: #fff; -fx-border-color: #c3cfe2; -fx-border-radius: 12; -fx-padding: 8;"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" maxWidth="200" minWidth="150">
                <Label text="Tipo treno:" style="-fx-font-size: 14px; -fx-text-fill: #234a7c; -fx-font-weight: bold;"/>
                <ComboBox fx:id="trainTypeBox" maxWidth="Infinity" promptText="Tipo treno"
                         style="-fx-background-radius: 12; -fx-background-color: #fff; -fx-border-color: #c3cfe2; -fx-border-radius: 12; -fx-padding: 8;"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" maxWidth="200" minWidth="150">
                <Label text="Classe:" style="-fx-font-size: 14px; -fx-text-fill: #234a7c; -fx-font-weight: bold;"/>
                <ComboBox fx:id="classBox" maxWidth="Infinity" promptText="Classe"
                         style="-fx-background-radius: 12; -fx-background-color: #fff; -fx-border-color: #c3cfe2; -fx-border-radius: 12; -fx-padding: 8;"/>
            </VBox>
        </HBox>

        <!-- Search Button -->
        <HBox alignment="CENTER" style="-fx-padding: 15 0 0 0;">
            <Button text="Cerca" onAction="#onSearch"
                   style="-fx-font-size: 16px; -fx-background-radius: 20; -fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 12 40; -fx-font-weight: bold;"
                   minWidth="120" prefWidth="150" maxWidth="200"/>
        </HBox>

        <!-- Navigation Button -->
        <HBox alignment="CENTER" style="-fx-padding: 10 0 0 0;">
            <Button text="Torna al menu" onAction="#onBackToDashboard"
                   style="-fx-font-size: 14px; -fx-background-radius: 15; -fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 8 24;"
                   minWidth="120" prefWidth="150"/>
        </HBox>
    </VBox>

    <!-- Results Section - Takes remaining space but never overlaps -->
    <VBox spacing="10" style="-fx-padding: 10 20 20 20;" VBox.vgrow="ALWAYS" minHeight="150">
        <!-- Results Header -->
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 5 0;">
            <Label text="Risultati ricerca:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #22304a;"/>
        </HBox>

        <!-- Results Table - Adaptive height -->
        <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS"
                   style="-fx-background-radius: 12; -fx-background-color: #fff; -fx-border-color: #c3cfe2; -fx-border-radius: 12;"
                   minHeight="100" prefHeight="300" maxHeight="500">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn text="ID" fx:id="colTrainId" minWidth="50" prefWidth="60" maxWidth="80" resizable="false" style="-fx-alignment: CENTER;"/>
                <TableColumn text="Treno" fx:id="colTrain" minWidth="80" prefWidth="120" style="-fx-alignment: CENTER;"/>
                <TableColumn text="Partenza" fx:id="colDeparture" minWidth="100" prefWidth="140" style="-fx-alignment: CENTER;"/>
                <TableColumn text="Arrivo" fx:id="colArrival" minWidth="100" prefWidth="140" style="-fx-alignment: CENTER;"/>
                <TableColumn text="Ora Partenza" fx:id="colTime" minWidth="80" prefWidth="120" style="-fx-alignment: CENTER;"/>
                <TableColumn text="Data" fx:id="colDate" minWidth="70" prefWidth="100" style="-fx-alignment: CENTER;"/>
                <TableColumn text="Posti disp." fx:id="colSeats" minWidth="70" prefWidth="100" style="-fx-alignment: CENTER;"/>
            </columns>
            <placeholder>
                <Label text="Nessun treno trovato. Utilizza il form sopra per cercare."
                       style="-fx-text-fill: #666; -fx-font-size: 14px; -fx-padding: 20;"/>
            </placeholder>
        </TableView>
    </VBox>

</VBox>
