<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="16" style="-fx-padding: 24; -fx-background-color: linear-gradient(to bottom right, #f5f7fa, #c3cfe2);"
      minWidth="800" minHeight="600" prefWidth="1000" prefHeight="700" maxWidth="1920" maxHeight="1080"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="it.unical.trenical.client.gui.controller.PromotionsAdminController">
    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #22304a; -fx-padding: 10 0 18 0;" text="Gestione Promozioni" />
    <TableView fx:id="promotionsTable" prefHeight="260" style="-fx-background-radius: 12; -fx-background-color: #fff; -fx-border-color: #c3cfe2; -fx-border-radius: 12;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" style="-fx-alignment: CENTER;" text="ID" />
            <TableColumn fx:id="colName" style="-fx-alignment: CENTER;" text="Nome" />
            <TableColumn fx:id="colDescription" style="-fx-alignment: CENTER-LEFT;" text="Descrizione" />
            <TableColumn fx:id="colDiscount" style="-fx-alignment: CENTER;" text="Sconto (%)" />
            <TableColumn fx:id="colRoute" style="-fx-alignment: CENTER;" text="Tratta" />
            <TableColumn fx:id="colClass" style="-fx-alignment: CENTER;" text="Classe" />
            <TableColumn fx:id="colFrom" style="-fx-alignment: CENTER;" text="Dal" />
            <TableColumn fx:id="colTo" style="-fx-alignment: CENTER;" text="Al" />
            <TableColumn fx:id="colFidelity" style="-fx-alignment: CENTER;" text="Solo FedeltÃ Treno" />
            <TableColumn fx:id="colTrainType" style="-fx-alignment: CENTER;" text="Tipo treno" />
        </columns>
    </TableView>
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onAddPromotion" style="-fx-font-size: 15px; -fx-background-radius: 20; -fx-background-color: #43a047; -fx-text-fill: white; -fx-padding: 8 30;" text="Aggiungi" />
        <Button onAction="#onEditPromotion" style="-fx-font-size: 15px; -fx-background-radius: 20; -fx-background-color: #ffa000; -fx-text-fill: #22304a; -fx-padding: 8 30;" text="Modifica" />
        <Button onAction="#onRemovePromotion" style="-fx-font-size: 15px; -fx-background-radius: 20; -fx-background-color: #d0021b; -fx-text-fill: white; -fx-padding: 8 30;" text="Rimuovi" />
        <Button onAction="#onRefresh" style="-fx-font-size: 15px; -fx-background-radius: 20; -fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 8 30;" text="Aggiorna" />
        <Button onAction="#onBack" style="-fx-font-size: 15px; -fx-background-radius: 20; -fx-background-color: #c3cfe2; -fx-text-fill: #22304a; -fx-padding: 8 30;" text="Torna alla dashboard" />
    </HBox>
</VBox>
