<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unical.trenical.client.gui.controller.NotificationsController"
            style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #c3cfe2);"
            prefWidth="900" prefHeight="600">
    <top>
        <VBox spacing="10" style="-fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Notifiche" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #22304a;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <CheckBox fx:id="showReadCheckbox" text="Mostra notifiche lette" style="-fx-font-size: 14px;"/>
                <Button fx:id="refreshButton" text="Aggiorna" onAction="#onRefresh"
                        style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 15;">
                    <tooltip><Tooltip text="Aggiorna la lista delle notifiche"/></tooltip>
                </Button>
                <Button fx:id="markAllReadButton" text="Segna tutte come lette" onAction="#onMarkAllRead"
                        style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 15;">
                    <tooltip><Tooltip text="Segna tutte le notifiche come lette"/></tooltip>
                </Button>
                <Button text="Indietro" onAction="#onBack"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 15;">
                    <tooltip><Tooltip text="Torna alla dashboard"/></tooltip>
                </Button>
                <Button fx:id="activateNotificationsButton" text="Notifiche treno" onAction="#onActivateNotifications"
                        style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 15;">
                    <tooltip><Tooltip text="Gestisci notifiche per uno o piÃ¹ treni"/></tooltip>
                </Button>
            </HBox>
            <Label fx:id="statusLabel" text="Caricamento notifiche..." style="-fx-font-style: italic; -fx-text-fill: #555;"/>
        </VBox>
    </top>
    
    <center>
        <TableView fx:id="notificationsTable" style="-fx-background-color: white; -fx-background-radius: 10;">
            <columns>
                <TableColumn fx:id="colTitle" text="Titolo" prefWidth="200"/>
                <TableColumn fx:id="colMessage" text="Messaggio" prefWidth="400"/>
                <TableColumn fx:id="colTime" text="Data e Ora" prefWidth="150"/>
                <TableColumn fx:id="colType" text="Tipo" prefWidth="100"/>
            </columns>
            <placeholder>
                <Label text="Nessuna notifica disponibile" style="-fx-font-style: italic;"/>
            </placeholder>
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
        </TableView>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 15;">
            <Label text="Doppio click su una notifica per segnarla come letta" style="-fx-font-style: italic; -fx-text-fill: #555;"/>
        </HBox>
    </bottom>
</BorderPane>