<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unical.trenical.client.gui.controller.BuyTicketController">
    <top>
        <Label text="Acquista Biglietto" style="-fx-font-size: 20px; -fx-padding: 10px;"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="12">
            <Label text="Seleziona il treno dalla ricerca o inserisci i dettagli"/>
            <VBox spacing="10" alignment="CENTER" maxWidth="300">
                <Label text="Stazione partenza:"/>
                <TextField fx:id="departureStationField" promptText="Stazione di partenza"/>
            </VBox>
            <VBox spacing="10" alignment="CENTER" maxWidth="300">
                <Label text="Stazione arrivo:"/>
                <TextField fx:id="arrivalStationField" promptText="Stazione di arrivo"/>
            </VBox>
            <VBox spacing="10" alignment="CENTER" maxWidth="300">
                <Label text="Treno:"/>
                <TextField fx:id="trainField" promptText="ID o nome treno"/>
            </VBox>
            <VBox spacing="10" alignment="CENTER" maxWidth="300">
                <Label text="Classe:"/>
                <ComboBox fx:id="classBox" promptText="Classe"/>
            </VBox>
            <VBox spacing="10" alignment="CENTER" maxWidth="300">
                <Label text="Numero posti:"/>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Spinner fx:id="seatsSpinner" min="1" max="10" initialValue="1"/>
                    <Label fx:id="seatsAvailableLabel" text="Disponibili: -" style="-fx-font-size: 12px; -fx-text-fill: #555;"/>
                </HBox>
            </VBox>
            <Label text="Metodo di pagamento:"/>
            <VBox spacing="10" alignment="CENTER" maxWidth="300">
                <RadioButton text="Carta di credito" fx:id="creditCardRadio"/>
                <RadioButton text="Portafoglio digitale" fx:id="digitalWalletRadio"/>
            </VBox>
            <Label fx:id="priceLabel" text="Prezzo: -" style="-fx-font-size: 16px; -fx-padding: 8;"/>
            <Button text="Acquista" onAction="#onBuy"/>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button text="Torna al menu" onAction="#onBackToDashboard"/>
        </VBox>
    </bottom>
</BorderPane>
